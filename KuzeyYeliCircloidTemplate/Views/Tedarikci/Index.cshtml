
@{
    ViewBag.Title = "Index";
}
@using KuzeyYeliCircloidTemplate.Models
@model List<Tedarikciler>

@section head{
    <style>
        .hata{
            color:red;
        }
    </style>
    
    }

@section body{
    <div class="modal fade small-modal" id="small-modal" tabindex="-1" role="dialog" aria-labelledby="small-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="small-modal-label">Tedarikçi Sil</h4>
                </div>
                <div class="modal-body">
                    <p class="mesaj"></p>
                    <p class="hata"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-danger tedSil">Evet</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
}






<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikçiler Listesi
                </div>
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a class="btn btn-success" href="/Tedarikci/Ekle">Yeni Tedarikçi Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Şirket Adı</th>
                                <th>Müşteri Adı</th>
                                <th>Müşteri Ünvanı</th>
                                <th>Adres</th>
                                <th>Şehir</th>
                                <th>Bölge</th>
                                <th>Posta Kodu</th>
                                <th>Ülke</th>
                                <th>Telefon</th>
                                <th>Faks</th>

                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Tedarikciler ted in Model)
                            {
                                <tr>
                                    <td>@ted.SirketAdi</td>
                                    <td>@ted.MusteriAdi</td>
                                    <td>@ted.MusteriUnvani</td>
                                    <td>@ted.Adres</td>
                                    <td>@ted.Sehir</td>
                                    <td>@ted.Bolge</td>
                                    <td>@ted.PostaKodu</td>
                                    <td>@ted.Ulke</td>
                                    <td>@ted.Telefon</td>
                                    <td>@ted.Faks</td>

                                    <td><a href="/Tedarikci/Guncelle/@ted.TedarikciID" class="btn btn-warning rounded">Güncelle</a></td>
                                    <td>
                                        <button class="btn btn-danger modalAc" data-toggle="modal" data-target="#small-modal" data-sirketadi="@ted.SirketAdi" data-id="@ted.TedarikciID">
                                            Sil
                                        </button>
                                    </td>

                                </tr>

                            }




                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @*<script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>*@
    <script>
        $(".modalAc").click(function () {
            var sirketAdi = $(this).data("sirketadi");
            $(".modal-body>p.mesaj").html(sirketAdi + " tedarikçisi silinsin mi?");
            var id = $(this).data("id");
            $(".tedSil").data("id", id);
            
        });

        $(".tedSil").click(function () {
            var id = $(this).data("id");
            $.ajax({
                type: "POST",
                url: "/Tedarikci/Sil/" + id,
                success: function (durum) {
                    if (durum=="başarılı") {
                        window.location.replace("/Tedarikci/Index");
                    } else {
                        $(".modal-body>p.hata").html("Tedarikçi silme anında bir hata oluştu!");
                    }
                    
                }

            });
        });
    </script>

}